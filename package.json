{
  "name": "react-electron",
  "version": "0.1.2",
  "author": "Prabudh Mishra",
  "description": "A Test electron application bootstrapped with React",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabudh-mishra/react-electron-demo.git"
  },
  "bugs": {
    "url": "https://github.com/prabudh-mishra/react-electron-demo/issues"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.1.3",
    "cli-truncate": "^3.1.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.1",
    "update-electron-app": "^2.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "postinstall": "electron-builder install-app-deps",
    "electron:build": "npm run build && electron-builder -mwl -c.extraMetadata.main=build/electron.js",
    "electron:build-os": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js",
    "electron:publish": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js --publish=always",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "wait-on": "^6.0.1"
  }
}
